page {
  height: 100%;
}

.container {
  box-sizing: border-box;
  padding: 30rpx;
  width: 100%;
  height: 100%;
}

.play-ground {
  border: 1px solid #dddddd;
}

.play-ground__row {
  display: flex;
}

.play-ground__row+.play-ground__row {
  border-top: 1px solid #dddddd;
}

.play-ground__col+.play-ground__col {
  border-left: 1px solid #dddddd;
}

.play-ground__box {
  position: relative;
  box-sizing: border-box;
  width: 50rpx;
  height: 50rpx;
}

.play-direction__btns {
  display: flex;
}